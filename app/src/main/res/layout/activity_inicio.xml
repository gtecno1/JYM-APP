<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/fondo2">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fondo">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:id="@+id/imagered"
            android:background="@drawable/redo"
            android:layout_gravity="right|top"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:background="@drawable/redo"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="311dp"
            android:layout_height="162dp"
            android:id="@+id/imagePRE"
            android:background="@drawable/logopre"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/imageView4"
            android:background="@drawable/redo"
            android:layout_gravity="left|bottom"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#00ffffff"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="40dp"
        android:id="@+id/relativeLayout">

        <Button
            android:onClick="main_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="INICIAR SECIÓN"
            android:id="@+id/bosecc"
            android:backgroundTint="#7395f4"
            android:background="#7395f4"
            android:textColor="#f3fffefe"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usu"
            android:hint="Usuario"
            android:foregroundTint="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_above="@+id/cont"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/cont"
            android:hint="Contraseña"
            android:textColorHint="#ffffff"
            android:layout_above="@+id/bosecc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chofer"
            android:id="@+id/racho"
            android:checked="false"
            android:textColor="#ffffff"
            android:layout_above="@+id/usu"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otros"
            android:id="@+id/raotro"
            android:checked="false"
            android:textColor="#ffffff"
            android:layout_above="@+id/usu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:onClick="main_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro para chofer"
            android:id="@+id/btreg"
            android:backgroundTint="#7395f4"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>