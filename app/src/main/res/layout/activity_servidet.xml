<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/fondo2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/relativeLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODIGO:"
            android:id="@+id/textcod"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#9a323131"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MARCA:"
            android:id="@+id/textView4"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/textpro"
            android:layout_alignLeft="@+id/textpro"
            android:layout_alignStart="@+id/textpro"
            android:textColor="#ffffff"
            android:background="#9a323131"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODELO:"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:textColor="#ffffff"
            android:background="#9a323131"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROPIETARIO:"
            android:id="@+id/textpro"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/textcod"
            android:layout_alignLeft="@+id/textcod"
            android:layout_alignStart="@+id/textcod"
            android:background="#9a323131"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLACA"
            android:id="@+id/textView10"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textColor="#ffffff"
            android:background="#9a323131"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LUGAR ACCIDENTE:"
            android:id="@+id/textView15"
            android:textSize="20dp"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="10dp"
            android:background="#9a323131"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DESTINO:"
            android:id="@+id/textView16"
            android:textSize="20dp"
            android:layout_below="@+id/textView15"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:layout_marginTop="10dp"
            android:background="#9a323131"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLOR:"
            android:id="@+id/textView7"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:textColor="#ffffff"
            android:background="#9a323131"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/frameLayout4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fondo">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@drawable/miults"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>


</RelativeLayout>